<h1>Event Listing</h1>

<table class="table table-hover">
  <tr>
    <th>TotalVotes</th>
    <th>Title</th>
    <th>Final Time</th>
    <th>User</th>
	<th>Vote Count</th>
    <th></th>
    <th></th>
	<th></th>
  	</tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.totalvoters %></td>
    <td><%= event.title %></td>
    <td><%= event.final_time %></td>
    <td><%= event.user_id if event.user_id.present? %></td>
	<td><%= event.votes.count %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />

